<% layout('../boilerplate') -%>
<% script('js/firebaseInit.js') -%>
<% script('js/productDetail.js') -%>
<% stylesheet('') -%>


<input type="hidden" name="productId" id="productId" value="<%=productId%> ">

<!-- Breadcrumb Section Begin -->


<div class="container">
    <div class="row" style="background-image:url(img/breadcrumb.jpg) ;">

        <h2 class="white-text center-align" style="padding: 10px;">Products</h2>
        <div class="row center-align">
            <a href="/"><i class="material-icons white-text">home</i></a>
            <i class="material-icons white-text">trending_flat</i>
            <a href="#"><i class="material-icons white-text">local_grocery_store</i></a>
        </div>
    </div>
</div>

<!-- Breadcrumb Section End -->

<!-- Product Details Section Begin -->
<div class="container">
    <div class="row">
        <div class="col s12 m6">
            <div class="row">                
                <div class="col s12" id="product-detail-image">
                    <img src="img/featured/feature-1.jpg">
                </div>
            </div>
        </div>
        <div class="col s12 m6">
            <div class="row">
                <h3 id="product-detail-name">Product Name</h3>
            </div>
            <div class="row" id="product-detail-varients">
                
            </div>
            <div class="row">
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star-half-o"></i>
                <span>(18 reviews)</span>

            </div>
            <div class="row">
                <div class="col s12">
                    <h5>Product Price : $ 897</h5>
                </div>
                <p id="product-detail-description">Product Description Content</p>
            </div>
            <div class="row">
                <div class="col s12">
                    <div class="row">
                        <div class="col">
                            <input type="text" value="1">
                        </div>
                    </div>                   
                </div>
                <div class="col s12">
                    <button>Add To Cart</button>
                </div>
                <div class="col s12">
                    <ul>
                        <li><b>Availability</b> <span>In Stock</span></li>
                        <li><b>Shipping</b> <span>01 day shipping. <samp>Free pickup today</samp></span></li>
                        <li><b>Weight</b> <span>0.5 kg</span></li>
                        <li><b>Share on</b>
                            <div class="share">
                                <a href="#"><i class="fa fa-facebook">fb</i></a>
                                <a href="#"><i class="fa fa-twitter">tw</i></a>
                                <a href="#"><i class="fa fa-instagram">ig</i></a>
                                <a href="#"><i class="fa fa-pinterest">pi</i></a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        
    </div>
    <div class="row">
        <div class="col s12">
          <ul class="tabs">
            <li class="tab col s3"><a href="#description">Description</a></li>
            <li class="tab col s3"><a class="active" href="#reviews">Reviews</a></li>
            <li class="tab col s3"><a class="active" href="#information">Information</a></li>
            
          </ul>
        </div>
        <div id="description" class="col s12">Description Content</div>
        <div id="reviews" class="col s12">review Content</div>
        <div id="information" class="col s12">Information Content</div>
      </div>
</div>


<!-- Product Details Section End -->

